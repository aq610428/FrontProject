<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
        android:id="@+id/swipeToLoadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:swipe_style="classic">

        <include
            android:id="@id/swipe_refresh_header"
            layout="@layout/layout_google_hook_header" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="@color/colorAccent"
                        android:gravity="center|left"
                        android:textSize="@dimen/ctv_sizen_17"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center|left"
                        android:text="发货单"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_17"
                        android:textStyle="bold" />
                </LinearLayout>


                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:hl_cornerRadius="3dp"
                    app:hl_shadowBackColor="#fff"
                    app:hl_shadowColor="#2A696969"
                    app:hl_shadowLimit="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:id="@+id/iv_code"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:text="商品名称"
                                android:textColor="@color/black20"
                                android:textSize="@dimen/ctv_sizen_14"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_cardNum"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:cursorVisible="true"
                                android:gravity="center|left"
                                android:hint="请输入商品名称"
                                android:paddingLeft="10dp"
                                android:textColor="@color/black7e"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/ctv_sizen_14" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="75dp"
                            android:background="@color/dive_line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:text="车辆品牌"
                                android:textColor="@color/black20"
                                android:textSize="@dimen/ctv_sizen_14"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/text_vehicle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:cursorVisible="true"
                                android:gravity="center|left"
                                android:hint="请输入商品名称"
                                android:paddingLeft="10dp"
                                android:textColor="@color/black7e"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/ctv_sizen_14" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="75dp"
                            android:background="@color/dive_line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:text="车辆型号"
                                android:textColor="@color/black20"
                                android:textSize="@dimen/ctv_sizen_14"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/text_marking"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:cursorVisible="true"
                                android:gravity="center|left"
                                android:hint="请输入车辆型号"
                                android:paddingLeft="10dp"
                                android:textColor="@color/black7e"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/ctv_sizen_14" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="75dp"
                            android:background="@color/dive_line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:text="VIN码"
                                android:textColor="@color/black20"
                                android:textSize="@dimen/ctv_sizen_14"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/text_vin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:cursorVisible="true"
                                android:gravity="center|left"
                                android:hint="请输入车辆VIN码"
                                android:paddingLeft="10dp"
                                android:textColor="@color/black7e"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/ctv_sizen_14" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="75dp"
                            android:background="@color/dive_line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:text="数量"
                                android:textColor="@color/black20"
                                android:textSize="@dimen/ctv_sizen_14"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/text_num"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:cursorVisible="true"
                                android:gravity="center|left"
                                android:hint="请输入车辆数量"
                                android:paddingLeft="10dp"
                                android:textColor="@color/black7e"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/ctv_sizen_14" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="75dp"
                            android:background="@color/dive_line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="match_parent"
                                android:gravity="center|left"
                                android:text="单位"
                                android:textColor="@color/black20"
                                android:textSize="@dimen/ctv_sizen_14"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/text_unit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:cursorVisible="true"
                                android:gravity="center|left"
                                android:hint="请输入单位"
                                android:paddingLeft="10dp"
                                android:textColor="@color/black7e"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/ctv_sizen_14" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="75dp"
                            android:background="@color/dive_line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="match_parent"
                                android:gravity="center|left"
                                android:text="发货时间"
                                android:textColor="@color/black20"
                                android:textSize="@dimen/ctv_sizen_14"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_goods"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:gravity="center|left"
                                android:hint="请选择送货时间"
                                android:paddingLeft="10dp"
                                android:textColor="@color/black7e"
                                android:textSize="@dimen/ctv_sizen_14" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="75dp"
                            android:background="@color/dive_line" />
                    </LinearLayout>
                </com.lihang.ShadowLayout>


                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/next_shape"
                    android:gravity="center"
                    android:text="提交订单"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_15" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:padding="6dp"
                        android:text="供货商查询"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_17"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/text_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:drawableRight="@mipmap/icon_add_front"
                        android:gravity="center"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_14" />

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@id/swipe_load_more_footer"
            layout="@layout/layout_google_hook_footer" />
    </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>
</LinearLayout>