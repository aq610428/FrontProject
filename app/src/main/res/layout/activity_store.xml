<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_blg"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@mipmap/ic_permit" />


                <TextView
                    android:id="@+id/text_cover"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/store_shape"
                    android:gravity="center"
                    android:text="企业门头照"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_14" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:drawableLeft="@mipmap/ic_basic_msg"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="企业基本信息"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_14"
                    android:textStyle="bold" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/dive_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="*"
                        android:textColor="@color/google_red"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="企业名称"
                        android:textColor="#898C8E"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <EditText
                        android:id="@+id/et_cardNmae"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorWhite"
                        android:cursorVisible="true"
                        android:hint="请输入企业名称"
                        android:lines="1"
                        android:textColor="@color/black33"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/ctv_sizen_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dive_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="*"
                        android:textColor="@color/google_red"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="联系人"
                        android:textColor="#898C8E"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <EditText
                        android:id="@+id/et_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorWhite"
                        android:cursorVisible="true"
                        android:hint="请输入联系人"
                        android:lines="1"
                        android:textColor="@color/black33"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/ctv_sizen_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dive_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="*"
                        android:textColor="@color/google_red"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="服务电话"
                        android:textColor="#898C8E"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorWhite"
                        android:cursorVisible="true"
                        android:hint="请输入联系电话"
                        android:lines="1"
                        android:maxLength="11"
                        android:phoneNumber="true"
                        android:textColor="@color/black33"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/ctv_sizen_14" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dive_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="*"
                        android:textColor="@color/google_red"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="营业时间"
                        android:textColor="#898C8E"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <TextView
                        android:id="@+id/text_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="开始时间"
                        android:lines="1"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="至"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_14" />


                    <TextView
                        android:id="@+id/text_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:hint="结束时间"
                        android:lines="1"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dive_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_tab1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="*"
                        android:textColor="@color/google_red"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <TextView
                        android:id="@+id/text_tab2"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/text_tab1"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="门店地址"
                        android:textColor="#898C8E"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <TextView
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@mipmap/ic_address"
                        android:layout_toRightOf="@+id/text_tab2"
                        android:background="@color/colorWhite"
                        android:cursorVisible="true"
                        android:gravity="center|left"
                        android:hint="请选择门店地址"
                        android:lines="2"
                        android:textColor="@color/black33"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/ctv_sizen_13" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dive_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="*"
                        android:textColor="@color/google_red"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="主营品牌"
                        android:textColor="#898C8E"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <EditText
                        android:id="@+id/et_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorWhite"
                        android:cursorVisible="true"
                        android:hint="请输入主营品牌"
                        android:lines="2"
                        android:textColor="@color/black33"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/ctv_sizen_13" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dive_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="*"
                        android:textColor="@color/google_red"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="主营业务"
                        android:textColor="#898C8E"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <EditText
                        android:id="@+id/et_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorWhite"
                        android:cursorVisible="true"
                        android:hint="请输入主营业务"
                        android:lines="2"
                        android:textColor="@color/black33"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/ctv_sizen_13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dive_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="*"
                        android:textColor="@color/google_red"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="救援电话"
                        android:textColor="#898C8E"
                        android:textSize="@dimen/ctv_sizen_14" />

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorWhite"
                        android:cursorVisible="true"
                        android:hint="请输入救援电话"
                        android:lines="2"
                        android:textColor="@color/black33"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/ctv_sizen_13" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:background="@drawable/next_shape"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/ctv_sizen_15" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>